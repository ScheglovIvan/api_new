  <div class="row mobile-statistic mobile-order-first">
    <div class="col-6 col-md-3">
      <div class="card card-stats">
        <!-- Card body -->
        <div class="card-body">
          <div class="row">
            <div class="col-9">
              <h6 class="text-muted mb-1">Баланс</h6>
              <span class="h3 font-weight-bold mb-0 ">{{stats.balance.value}} $</span>
            </div>
            {{#if stats.balance.last}}
            <div class="col-3">
              {{#ifSign stats.balance.last -1}}
              <span class="badge badge-xs badge-soft-success ml-2"><i class="fas fa-arrow-up"></i>
                {{stats.balance.last}} %</span>
              {{else}}
