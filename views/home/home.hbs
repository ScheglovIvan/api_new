<style>
  @media (max-width: 577px) {

    .page-content {
          display: flex;
          flex-direction: column;
    }

    .mobile-order-first {
      order: 0;
    }

    .mobile-order-second {
      order: 1;
    }

    .mobile-order-third {
      order: 2;
    }

    .mobile-hide-block {
      display: none;
    }

    .content-mobile {
      margin-top: 26px !important;
    }

    .mobile-statistic .card {
      min-height: 125px;
    }
  }
</style>