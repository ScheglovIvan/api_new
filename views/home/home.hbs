        </div>
      </div>
    </div>
    <div class="col-6 col-md-3">
      <div class="card card-stats">
        <!-- Card body -->
        <div class="card-body">
          <div class="row">
            <div class="col-9">
              <h6 class="text-muted mb-1">Всего</h6>
              <h6 class="text-muted mb-1">подписок</h6>
              <span class="h3 font-weight-bold mb-0 ">{{stats.total_acc.value}}</span>
