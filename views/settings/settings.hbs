<!-- Content -->
<!-- Page content -->
<div class="page-content">
   <!-- Modals -->
        <div class="modal fade" id="modal-add-new-account" tabindex="-1" role="dialog" aria-hidden="true">
          <div class="modal-dialog modal-md modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-header align-items-center">
                <div class="modal-title">
                  <h6 class="mb-0">Добавить учётную запись</h6>
                </div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="">
                <!-- Connections -->
                <div class="row justify-content-center align-items-start">
                    <div class="col-12">
                                      <form method="POST" action="/instagram/add" class="mt-4 send-form">
                            <div class="card">
                                <div class="card-body">
                                    <div class="form-group">
                                        <label class="form-control-label">
                                            Номер телефона, имя пользователя или эл. адрес
                                        </label>
                                        <input required name="login" type="text" class="form-control">
                                    </div>
                                    <!-- Project description -->
                                    <div class="form-group">
                                        <label class="form-control-label mb-0">
                                            Пароль
                                        </label>
                                        <small class="form-text text-muted mb-2 mt-0">
                                            Пароли хранятся в зашифрованном виде и известны только вам.
                                        </small>
                                        <div class="input-group input-group-merge">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                                            </div>
                                            <input required name="password" type="password" class="form-control"
                                                id="input-password" placeholder="Password">
                                            <div class="input-group-append">
                                                <span class="input-group-text">
                                                    <a href="#" data-toggle="password-text"
                                                        data-target="#input-password">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- Buttons -->
                                <div class="alert alert-danger error-form d-none ml-3 ml-3" role="alert">
                                    <div></div>
                                </div>
                                <div class="text-right">
                                    <button type="submit" class="btn btn-sm btn-primary rounded-pill m-3">Добавить
                                        учётную
                                        запись</button>
                                </div>
                            </div>
                        </form>
                    </div>
      

                </div>
              </div>
            </div>
          </div>
        </div>
  <!-- Page title -->
  <div class="page-title">
    <div class="row justify-content-between align-items-center">
      <div class="col-md-12 text-center mb-3 mb-md-0">
        <h5 class="h3 font-weight-400 mb-0 text-white text-left">Страница настроек</h5>
      </div>
    </div>
    <!-- Page content -->
    <div class="mt-3">
      <div class="row mt-2">
        <div class="col-lg-12 order-lg-1">
          {{#each accounts}}
          <div class="list-group-item">
            <div class="row align-items-center">
              <div class="col-auto">
                <!-- Avatar -->
                <a href="{profile_url}}" target="_blank" class="avatar rounded-circle">
                  <img alt="Image placeholder" src="{{profile_avatar_url}}" class="">
                </a>
              </div>
              <div class="col-6 ml-n2">
                <a href="#!" class="d-block h6 mb-0">{{profile_name}}</a>
                <p class="card-text text-sm text-muted mb-0">
                  {{profile_nickname}}
                </p>
              </div>
              <div class="col-6 mt-3">
                <form class="send-form" method="POST" action="/instagram/setcost">
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <input name="account_id" type="hidden" value="{{_id}}">
                        <label class="form-control-label">Укажите значение стоимости месячной подписки (RUB)</label>
                        <input name="account_cost" value="{{cost_subscribe}}" class="form-control" required type="text">
                      </div>
                      <div class="mt-1 mb-3">
                        <button type="submit" class="btn btn-sm btn-primary rounded-pill">Сохранить</button>
                      </div>
                      <div class="form-group">
                        <label class="form-control-label">Уникальная ссылка</label>
                        <input name="special_link" value="{{protocol}}{{../home_url}}/profile/create/{{special_link}}" class="form-control" type="text">
                      </div>
                      <div class="mt-1 mb-3">
                        <button type="button" class="btn btn-sm btn-primary rounded-pill copy-link">Скопировать</button>
                      </div>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
      <div class="row">
        <div class="col">
               <div class="card">
              <div class="card-body">
                <div class="row align-items-center">
                  <div class="col-sm-12 text-sm-left">
                    <!-- Add to cart -->
                    <a href="#modal-add-new-account" class="btn btn-sm btn-white btn-icon rounded-pill" data-toggle="modal">
                      <span class="btn-inner--icon"><i class="fas fa-users"></i></span>
                      <span class="btn-inner--text">Добавить аккаунт</span>
                    </a>
                  </div>
                </div>
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>

