    <!-- Page content -->
    <div class="mt-3">
      <div class="row mt-2">
        <div class="col-lg-12 order-lg-1">
          <!-- Listing -->
            <div class="list-group-item">
                <div class="row align-items-center">
                <div class="col-auto">
                    <!-- Avatar -->
                    <a href="{{account.profile_url}}" target="_blank" class="avatar rounded-circle">
                    <img alt="Image placeholder" src="{{account.profile_avatar_url}}" class="">
                    </a>
                </div>
                <div class="col-6 ml-n2">
                    <a href="#!" class="d-block h6 mb-0">{{profile_name}}</a>
                    <p class="card-text text-sm text-muted mb-0">
                        {{account.profile_nickname}}
                    </p>
                </div>
                <div class="col-md-12 mt-3">
                    <form class="send-form" method="POST" action="/instagram/setcost">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <input name="acc_id" type="hidden" value="{{account._id}}">
                                <label class="form-control-label">Укажите значение стоимости месячной подписки $</label>
                                <input name="account_cost" value="{{account.cost_subscribe}}" class="form-control" required type="text">
                            </div>
                            <div class="mt-1 mb-3">
                                <button type="submit" class="btn btn-sm btn-primary rounded-pill">Сохранить</button>
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Уникальная ссылка</label>
                                <input name="special_link" value="{{protocol}}{{home_url}}/user/subscribe/{{account.profile_nickname}}" class="form-control" type="text">
                            </div>
                            <div class="mt-1 mb-3">
                                <button type="button" class="btn btn-sm btn-primary rounded-pill copy-link">Скопировать</button>
                            </div>
                        </div>
                    </div>
                    </form>
                </div>
                </div>
            </div>
        </div>
      </div>
    </div>
  </div>
