                    <span class="btn-inner--icon"><i class="fas fa-chart-bar"></i></span>
                    <span class="btn-inner--text">Месяц</span>
                  </button>
                  {{/is}}
                  {{#is type_filter 'month'}}
                  <input type="hidden" name="type_filter" value="year">
                  <button type="submit" class="btn btn-xs btn-warning btn-icon rounded-pill">
                    <span class="btn-inner--icon"><i class="fas fa-chart-bar"></i></span>
                    <span class="btn-inner--text">Год</span>
                  </button>
                  {{/is}}
                </form>
              </div>
              </div>
            </div>
            <div class="card-body">
              {{#if stats.sales.last}}
              <div class="row align-items-center mt-3">
                <div class="col">
                  <h6 class="text-sm mb-0">Эффективность</h6>
                  {{#ifSign stats.sales.last -1}}
                  <span class="badge badge-xs badge-soft-success ml-2"><i class="fas fa-arrow-up"></i>
                    {{stats.sales.last}} %</span>
                  {{else}}
                  <span class="badge badge-xs badge-soft-denger ml-2"><i class="fas fa-arrow-down"></i>
                    {{stats.sales.last}} %</span>
                  {{/ifSign}}
                </div>
              </div>
              {{/if}}
              <div class="row align-items-center  {{#if stats.sales.last}} mt-3 {{/if}}">
                <div class="col">
                  <h6 class="text-sm mb-0">
                    Заработок
                  </h6>
                  {{stats.profit.value}}
                  <span class="text-nowrap h6 text-muted text-sm">{{stats.sales.value}} $ </span>
                  {{#if stats.sales.last}}
                  {{#ifSign stats.sales.last -1}}
                  <span class="badge badge-xs badge-soft-success ml-2"><i class="fas fa-arrow-up"></i>
                    {{stats.sales.last}} %</span>
                  {{else}}
                  <span class="badge badge-xs badge-soft-warning ml-2"><i class="fas fa-arrow-down"></i>
                    {{stats.sales.last}} %</span>
                  {{/ifSign}}
                  {{/if}}
                </div>
                {{#is type_filter 'year'}}
                <div class="col-4">
                  <div style="max-width: 100px;">
                    <div class="spark-chart" data-toggle="spark-chart" data-type="line" data-height="30"
                      data-color="success" data-dataset="[{{stats.profit_stats}}]"></div>
                  </div>
                </div>
                {{/is}}
              </div>
              <div class="row mt-3 align-items-center">
                <div class="col">
                  <h6 class="text-sm mb-0">Платные подписки</h6>
                  <span class="text-nowrap h6 text-muted text-sm">{{stats.total_acc.value}}</span>
                  {{#if stats.total_acc.last}}
                  {{#ifSign stats.total_acc.last -1}}
                  <span class="badge badge-xs badge-soft-info ml-2"><i
                      class="fas fa-arrow-up"></i>{{stats.total_acc.last}}%</span>
                  {{else}}
                  <span class="badge badge-xs badge-soft-warning ml-2"><i
                      class="fas fa-arrow-down"></i>{{stats.total_acc.last}}%</span>
                  {{/ifSign}}
                  {{/if}}
                </div>
                {{#is type_filter 'year'}}
                <div class="col-4">
                  <div style="max-width: 100px;">
                    <div class="spark-chart" data-toggle="spark-chart" data-type="bar" data-height="30"
                      data-color="primary" data-dataset="[{{stats.graph_followers}}]"></div>
                  </div>
                </div>
                {{/is}}
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row mobile-hide-block">
        <div class="col-md-12">
          <div class="card card-fluid">
            <div class="card-header">
              <div class="row align-items-center">
                <div class="col-auto">
                  <!-- Avatar -->
                  <a href="#" class="avatar rounded-circle">
                    <img alt="Image placeholder" src="{{account.profile_avatar_url}}" class="">
                  </a>
                </div>
                <div class="col ml-md-n2">
                  <a href="#!" class="d-block h6 mb-0">{{account.profile_nickname}}</a>
                  <small class="d-block text-muted">{{account.profile_name}}</small>
                </div>
              </div>
            </div>
            <div class="card-body p-1">
              <div class="row">
                <div class="col-4 text-center">
                  <span class="h5 mb-0">{{stats.total_acc.value}}</span>
                  <span class="d-block text-sm">Подписок</span>
                </div>
                <div class="col-4 text-center">
                  <span class="h5 mb-0">{{stats.visited.value}}</span>
                  <span class="d-block text-sm">Посещений</span>
                </div>
                <div class="col-4 text-center">
                  <span class="h5 mb-0"> {{stats.sales.value}}</span>
                  <span class="h5 mb-0"> {{stats.profit.value}}</span>
                  <span class="d-block text-sm">Заработок</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
